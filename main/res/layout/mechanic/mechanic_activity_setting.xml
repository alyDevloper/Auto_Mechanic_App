<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4777ca"
    tools:context=".MechanicSettingActivity"
    android:theme="@style/AppTheme">

    <ImageView
        android:id="@+id/mechanic_profile_pic"
        android:layout_width="123dp"
        android:layout_height="122dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/user_display_picture11"
        android:background="@drawable/circle_backgound"
        android:src="@drawable/profile_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mechanic_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mechanic_profile_pic"
        app:layout_constraintStart_toStartOf="@+id/mechanic_profile_pic"
        app:layout_constraintTop_toBottomOf="@+id/mechanic_profile_pic"
        tools:ignore="TextContrastCheck" />

    <ImageButton
        android:id="@+id/mechanic_profile_back"
        android:layout_width="22dp"
        android:layout_height="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/back"
        android:text="Back"
        android:textColor="#ffff"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:background="@drawable/white_background"
        android:orientation="vertical"
        android:padding="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/AppTheme">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/mechanic_profile_name"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Your Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#8e8e8e"
            android:textColorHint="#8e8e8e"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/text22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mechanic_profile_name" />

        <EditText
            android:id="@+id/mechanic_profile_email"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#8e8e8e"
            android:textColorHint="#8e8e8e"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/text22"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/text22"
            app:layout_constraintTop_toBottomOf="@+id/text22" />

        <TextView
            android:id="@+id/text33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mechanic_profile_email" />

        <EditText
            android:id="@+id/mechanic_profile_password"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Your Password"
            android:inputType="text|textPassword"
            android:padding="10dp"
            android:textColor="#8e8e8e"
            android:textColorHint="#8e8e8e"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/text33"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/text33"
            app:layout_constraintTop_toBottomOf="@+id/text33" />

        <ToggleButton
            android:id="@+id/togglePasswordVisibility"
            android:layout_width="51dp"
            android:layout_height="44dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:button="@drawable/eye_visibility"
            android:contentDescription="Toggle Password Visibility"
            android:gravity="center"
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="@+id/mechanic_profile_password"
            app:layout_constraintEnd_toEndOf="@+id/mechanic_profile_password"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/mechanic_profile_password"
            app:layout_constraintTop_toTopOf="@+id/mechanic_profile_password"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/text44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Phone"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mechanic_profile_password" />

        <EditText
            android:id="@+id/mechanic_profile_number"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/text_background"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Your Phone"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="#8e8e8e"
            android:textColorHint="#8e8e8e"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/text44"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/text44"
            app:layout_constraintTop_toBottomOf="@+id/text44" />

        <TextView
            android:id="@+id/text55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="CNIC"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mechanic_profile_number" />

        <EditText
            android:id="@+id/mechanic_profile_CNIC"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/text_background"
            android:ems="15"
            android:gravity="start|top"
            android:hint="Your CNIC"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="#8e8e8e"
            android:textColorHint="#8e8e8e"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/text55"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/text55"
            app:layout_constraintTop_toBottomOf="@+id/text55" />

        <TextView
            android:id="@+id/text65"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mechanic_profile_CNIC" />

        <EditText
            android:id="@+id/mechanic_profile_address"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/text_background"
            android:ems="20"
            android:gravity="start|top"
            android:hint="Your Address"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#8e8e8e"
            android:textColorHint="#8e8e8e"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/text65"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/text65"
            app:layout_constraintTop_toBottomOf="@+id/text65" />

        <Button
            android:id="@+id/mechanic_profile_update_btn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/orange_btn_background"
            android:text="Update"
            android:textAllCaps="true"
            android:textColor="#ffff"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mechanic_profile_address" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
